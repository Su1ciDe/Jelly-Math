.bordered-box {
    border-width: 4px;
    border-color: white;
    border-radius: 10px;
}

.unity-toggle {
    height: 150px;
    width: 150px;
    background-size: 145px;
    border-color: white;
    border-width: 0;
    transition: 0.2s all;
}

.unity-toggle:checked {
    border-radius: 5px;
    border-width: 4px;
    border-color: red;
}

.unity-toggle Label {
    -unity-font-style: bold;
    font-size: 18px;
    color: white;
    -unity-text-align: upper-center;
    margin-top: 2px;
}

.radio {
    height: 140px;
    width: 140px;
    background-size: 135px;
    border-color: white;
    border-width: 2;
    transition: 0.2s all;

    margin-top: 5px;
    margin-bottom: 5px;
}

.radio:checked {
    border-radius: 5px;
    border-width: 4px;
    border-color: lawngreen;
}

.radio Label {
    -unity-font-style: bold;
    font-size: 18px;
    color: white;
    -unity-text-align: upper-center;
    margin-top: 2px;
}

.header {
    font-size: 18px;
    color: darkblue;
    -unity-text-align: middle-center;
    -unity-font-style: bold;
    background-color: lightslategrey;
    border-radius: 5px;
    margin-bottom: 5px;
}

.grid {
    flex-basis: 100%;
    flex-grow: 1;
    flex-shrink: 1;
    align-items: flex-start;
    align-self: flex-start;
    display: none;
    margin: 5px;
}

.gridRow {
    width: 100%;
    flex-direction: row;
    min-height: 50px;
    margin-bottom: 5px;
}

.cell {
    background-color: white;
    height: 50px;
    width: 50px;
    transition: 0.2s all;

    font-size: 40px;
    -unity-font-style: bold;
    -unity-text-outline: 1px;
    -unity-text-outline-color: black;
    -unity-text-align: middle-center;
    -unity-text-overflow-position: middle;
}

