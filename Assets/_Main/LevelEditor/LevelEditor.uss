.cell-radios {
    width: 150px;
    -unity-text-align: middle-left;
    -unity-font-style: bold;
    border-radius: 15px;
    border-width: 0;
    margin-left: 20px;
    margin-right: 20px;
    padding-left: 10px;
    padding-right: 10px;
    transition: 0.25s all;
}

.cell-radios:checked {
    border-width: 2px;
    border-color: lawngreen;
    scale: 1.15;
}

.tab-button {
    height: 30px;
    margin: 0;
    padding: 0;
    flex-grow: 1;
    border-width: 1px;
    border-bottom-width: 0;
    transition: 0.25s all;
}

.holder {
    height: 40px;
    padding: 10px;
    margin-bottom: 5px;
}

.main {
    flex: 1;
}

.list {
    flex-grow: 1;
}
